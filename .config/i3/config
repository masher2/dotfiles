##################################################
# A S D F G H J K L
# focus the parent container
bindsym $mod+a focus parent

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout tabbed

# start dmenu (a program launcher)
bindsym $mod+d exec dmenu_run

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Download managers
bindsym $mod+g exec --no-startup-id uget-gtk
bindsym $mod+Shift+g exec --no-startup-id transmission-gtk

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left 30
bindsym $mod+Shift+j move down 30
bindsym $mod+Shift+k move up 30
bindsym $mod+Shift+l move right 30

# resize window
bindsym $mod+Ctrl+h exec --no-startup-id ~/scripts/i3resize left
bindsym $mod+Ctrl+j exec --no-startup-id ~/scripts/i3resize down
bindsym $mod+Ctrl+k exec --no-startup-id ~/scripts/i3resize up
bindsym $mod+Ctrl+l exec --no-startup-id ~/scripts/i3resize right


