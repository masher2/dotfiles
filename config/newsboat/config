browser "surf %u &"
auto-reload yes

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key U show-urls

color listnormal blue default
color listnormal_unread blue default bold
color listfocus black cyan standout
color listfocus_unread cyan black bold
color info color12 color8 bold

text-width 120

macro o set browser "w3m" ; open-in-browser ; set browser "surf %u &"
macro b set browser "brave --incognito %u &" ; open-in-browser ; set browser "surf %u &"
