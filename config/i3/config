# Backlight control {{{
bindsym XF86MonBrightnessUp exec sudo light -A 5
bindsym $mod+Shift+F6 exec sudo light -A 1
bindsym XF86MonBrightnessDown exec sudo light -U 5
bindsym $mod+Shift+F5 exec sudo light -U 1
bindsym $mod+Prior exec sudo light -A 5
bindsym $mod+Next exec sudo light -U 5

# Get the name of your keyboard backlights with:
# light -L
bindsym XF86KbdBrightnessUp exec light -Ars 'sysfs/leds/asus::kbd_backlight' 1
bindsym XF86KbdBrightnessDown exec light -Urs 'sysfs/leds/asus::kbd_backlight' 1
